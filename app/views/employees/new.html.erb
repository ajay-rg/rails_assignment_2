<h1> Page to create New employee </h1>
<%= form_for :employee,url: employees_path  do |f| %>
  <p>
      <%= f.label :Employee_Name %><br>
      <%= f.text_field :name %>
  </p>
  <p>
      <%= f.label :Team_lead%><br>
      <%= f.collection_radio_buttons :lead_id, Lead.all, :id, :lead_name do |m| %>
        <%= m.radio_button %> <%= m.label %>
      <% end %>
  </p>

  <p>
    <%= f.label :Project%> <br>
    <%= f.collection_select :project_id, Project.order(:project),:id,:project, include_blank: true %>

  </p>
    <p>
      <%= f.label :Skills %><br>
      <%= f.collection_check_boxes :skill_ids, Skill.all, :id, :skill do |m| %>
       <%= m.check_box %> <%= m.label %>
    <% end %>
  </p>
  <p>
      <%= f.submit %>
  </p>
<% end %>